<p style="color: green"><%= notice %></p>
<% content_for :page_title,  "Index" %>

<div class="section">
  <div class="container">
    <% @projects.each do |project| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to project.name, project %></p>
            </div>
          </div>
          <div class="content">
            <%= project.description %>
          </div>
          <div class="content">
            <%= project.status %>
          </div>
          <div class="comment-count">
            <span class="tag is-rounded"><%= project.comments.count %> comments</span>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>
